
/* Main Styles */

* {
    font: 12pt "Catamaran";
    color: #212121;
}

QMainWindow {
    background-color: #FAFAF0;
}

QMenuBar {
    font-size: 10pt;
}

QMenuBar::item:!selected {
    background: transparent;
}

QMenu {
    font-size: 10pt;
}

QWidget {
    background-color: #E5E5E5;
    border: none;
}

ExoBase {
    background-color: #FAFAF0;
    color: #212121;
}

QWidget#Card {
    background-color: #FFFFFF;
    border-radius: 4px;
}

/* Labels */

QLabel {
    background: transparent;
}

QLabel#Accuracy {
    font: bold 25pt "Montserrat";
    color: #212121;
    padding: 3px 3px 3px 3px;
}

QLabel#FormLabel {
    font: 17pt;
    color: #212121;
}

QLabel#CardLabel {
    font: 17pt "Montserrat";
    font-weight: 350;
    color: white;
    background: #607D8B;
    padding: 18px 10px 10px 10px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QLabel#QuesLabel {
    font-family: "Merriweather";
    font-size: 16pt;
    color: #212121;
    padding: 3px;
}

/* Tab Bar */

QTabWidget::pane {
    border-top: 2px solid #004000;
    border-bottom: 2px solid #004000;
    padding: 0;
}

QTabWidget::tab-bar {
    left: 5px;
}

QTabBar::tab {
    padding: 4px 8px 0 8px;
    border-top-right-radius: 2px;
    border-top-left-radius: 2px;
    min-width: 8ex;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #006000, stop: 0.5 #005000,
                                stop: 1.0 #004000);
    color: #FFFFFF;
    padding-left: 6px;
    margin-left: -4px;
    margin-right: -4px;
}

QTabBar::tab:first:selected {
    margin-left: 0;
}

QTabBar::tab:last:selected {
    margin-right: 0;
}

QTabBar::tab:only-one:selected {
    margin: 0;
}

QTabBar::tab:!selected {
    background-color: transparent;
    color: #212121;
    border-top: 1px solid #A0A0A0;
    border-right: 1px solid #A0A0A0;
}

QTabBar::tab:first:!selected {
    border-left: 1px solid #A0A0A0;
}

/* Push Buttons */

QPushButton {
    background: #282845;
    color: #FFFFFF;
    border-radius: 5px;
    padding: 5px 10px 5px 10px;
}

QPushButton:hover {
    background: #393956;
}

QPushButton:pressed {
    background: #4A4A67;
    padding-top: 7px;
}

QPushButton#LabelStyle {
    background: transparent;
    color: #212121;
    border-radius: 5px;
    /*border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;*/
    border-bottom: 1px solid #282845;
    padding: 5px 0 2px 0;
}

QPushButton#LabelStyle:hover {
    background-color: #E0E0E0;
}

/* Status Bar */

QStatusBar {
    color: #313131;
}

/* Line Edit */

QLineEdit {
    background: transparent;
    color: #757575;
    padding: 1px 3px 1px 3px;
    border-bottom: 3px solid #003380;
    border-radius: 3px;
    font-size: 15pt;
}

/* Combo Box */

QComboBox {
    border-radius: 5px;
    padding: 5px 10px 5px 18px;
    min-width: 6em;
}

QComboBox QListView {
    background: #F5F5F5;
}

QComboBox:!editable {
    color: #757575;
    background: #FFFFFF;
    border: 1px solid #003380;
    border-radius: 5px;
}

/* QComboBox gets the "on" state when the popup is open */
QComboBox:!editable:on {
    color: #757575;
    background: #FFFFFF;
    border: 1px solid #003380;
    border-radius: 5px;
}

QComboBox:on { /* shift the text when the popup opens */
    padding-top: 10px;
    padding-left: 10px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    padding-right: 12px;
    background-color: #FFFFFF;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

QComboBox::down-arrow {
    image: url(%s);
    width: 15px;
    height: 15px;
}

QComboBox::down-arrow:on { /* shift the arrow when popup is open */
    top: 1px;
    left: 1px;
}

/* Table */

QTableView {
    gridline-color: #777777;
    border-top: 1px solid #777777;
    border-left: 1px solid #777777;
}

QTableWidget QLabel {
    color: #535353;
    font-size: 12pt;
    background-color: #FFFFFF;
    padding: 8px 8px 8px 8px;
}

QTableWidget QLabel#BlankLabel {
    background-color: #FFFFFF;   
}

QTableWidget QLabel#MainLabel {
    color: #212121;
    font-size: 13pt;
    font-weight: 500;
}

/* Check Box */

QCheckBox {
    color: #FFFFFF;
    background-color: #003380;
    border-radius: 3px;
    padding: 5px 9px 5px 5px;
}

QCheckBox:hover {
    background-color: #114491;
}

QCheckBox:pressed {
    background-color: #2255A2;
}

QCheckBox::indicator {
    padding: 2px 2px 2px 2px;
    margin: 2px 2px 4px 2px;
}

QCheckBox::indicator:unchecked {
    image: url(%s);
    width: 17px;
    height: 17px;
}

QCheckBox::indicator:checked {
    image: url(%s);
    width: 17px;
    height: 17px;
}

/* Scroll Bar */

QScrollBar:vertical {
    background: transparent;
    width: 5px;
    margin: 2px 0 2px 0;
 }
 
 QScrollBar::handle:vertical {
    background: #757575;
    min-height: 25px;
    border-radius: 2px;
 }

QScrollBar::add-line:vertical {
    background: transparent;
    height: 1px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    background: transparent;
    height: 1px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    width: 1px;
    height: 1px;
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background: transparent;
    height: 5px;
    margin: 0px 2px 0 2px;
}

QScrollBar::handle:horizontal {
    background: #757575;
    border-radius: 2px;
    min-width: 25px;
}

QScrollBar::add-line:horizontal {
    background: transparent;
    width: 1px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
    background: transparent;
    width: 1px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar:left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
    width: 1px;
    height: 1px;
    background: none;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* QSlider */

QSlider {
    background: transparent;
}

QSlider::groove:horizontal {
    height: 3px;
    background: white;
    margin: 2px 0;
    border-radius: 10px;
    position: absolute;
    top: 10px;
}

QSlider::handle:horizontal {
    background: #FFFFFF;
    width: 18px;
    margin: -4px 0; /* handle is placed by default on the contents rect of the groove. Expand outside the groove */
    border: 1px solid #212121;
    border-radius: 4px;
}

QSlider::add-page:horizontal {
    background: #CCFFE6;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QSlider::sub-page:horizontal {
    background: #003380;
    border-radius: 15px;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
}

/* Plain Text Box */

QPlainTextEdit#TextBox {
    background: #FFFFFF;
    font: 11pt "Cutive Mono";
}